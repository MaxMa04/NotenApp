<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotenApp.Pages.PrFachWaehlenSeite"
             xmlns:ViewModels="clr-namespace:NotenApp.ViewModels">
    <ContentPage.BindingContext>
        <ViewModels:HalbjahrViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Kein Fach" Clicked="Button_Clicked">
                
            </Button>
            <CollectionView ItemsSource="{Binding FaecherHJ1}" SelectionChanged="CollectionView_SelectionChanged" SelectionMode="Single">
                <CollectionView.ItemTemplate >
                    <DataTemplate>
                        <Frame>
                            <Label Text="{Binding Name}"></Label>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>
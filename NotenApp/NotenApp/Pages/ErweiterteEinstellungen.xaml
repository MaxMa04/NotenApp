<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NotenApp.Pages.ErweiterteEinstellungen"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Erweiterte Einstellungen">
    <ContentPage.Content>
        <StackLayout Padding="10" Background="{DynamicResource Primary}">
            <Frame BackgroundColor="{DynamicResource Third}" CornerRadius="20">
                <StackLayout Orientation="Horizontal">
                    <Label
                        FontAttributes="Bold"
                        FontSize="17"
                        HorizontalOptions="Center"
                        Text="Popup vor dem Löschen einer Note"
                        TextColor="{DynamicResource Primary}"
                        VerticalOptions="Center" />

                    <Switch x:Name="_switch" Toggled="Switch_Toggled" />


                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
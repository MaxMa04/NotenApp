<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:ViewModels="clr-namespace:NotenApp.ViewModels"
             x:Class="NotenApp.Pages.FachHinzufuegenSeite">
    <ContentPage.BindingContext>
        <ViewModels:FachHinzufuegenViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <ListView x:Name="myListView"  ItemSelected="myListView_ItemSelected" ItemsSource="{Binding Faecher}" RowHeight="100">
            <ListView.ItemTemplate >
                <DataTemplate >
                    <ViewCell >
                        <StackLayout>

                            <Frame BackgroundColor="#ABBF4E" CornerRadius="10" HeightRequest="20" Margin="5">
                                <Label Text="{Binding Name}"/>
                            </Frame>
                            
                        </StackLayout>
                    </ViewCell>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>
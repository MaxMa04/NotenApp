<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NotenApp.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ViewModels="clr-namespace:NotenApp.ViewModels"
    xmlns:local="clr-namespace:NotenApp.Logic"
    NavigationPage.HasNavigationBar="True">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Clicked="OpenSettings"
            IconImageSource="{local:ImageResource NotenApp.Bilder.Settings.png}"
            Order="Primary"
            Priority="0" />
    </ContentPage.ToolbarItems>
    <ContentPage.BindingContext>
        <ViewModels:MainPageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid BackgroundColor="{StaticResource PrimaryB}">

            <!--  Griddefinition  -->

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>

                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
                <RowDefinition Height="140" />
                <RowDefinition Height="90" />

            </Grid.RowDefinitions>
            <!--  Ziele  -->
            <Frame
                Grid.Row="0"
                Grid.ColumnSpan="4"
                BackgroundColor="{StaticResource FourthB}">
                <Label
                    Margin="-15"
                    FontSize="30"
                    HorizontalOptions="Center"
                    Text="Ziele"
                    TextColor="Black"
                    VerticalOptions="Center" />
            </Frame>
            <CollectionView
                Grid.Row="1"
                Grid.ColumnSpan="4"
                ItemsSource="{Binding FachZiele}"
                SelectionChanged="CollectionView_SelectionChanged"
                SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding ZielNote}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <!--  aktueller Schnitt Block 1  -->
            <Frame
                Grid.Row="2"
                Grid.ColumnSpan="4"
                Margin="20,20,20,10"
                Padding="-5"
                CornerRadius="20">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="OpenBlock1" />
                </Frame.GestureRecognizers>
                <StackLayout HorizontalOptions="CenterAndExpand">
                    <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                        <Label
                            Margin="0,7,0,-5"
                            FontSize="Large"
                            HorizontalTextAlignment="Center"
                            Text="Block 1"
                            TextColor="Black" />
                        <Frame
                            Margin="0,8,0,0"
                            BackgroundColor="Red"
                            CornerRadius="20">
                            <Label
                                Margin="-15"
                                FontSize="Small"
                                HorizontalTextAlignment="Center"
                                Text="{Binding PunktzahlBlock1}"
                                TextColor="Black"
                                VerticalTextAlignment="Start" />
                        </Frame>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" WidthRequest="280">
                        <Frame
                            Margin="0"
                            CornerRadius="15"
                            HeightRequest="18"
                            WidthRequest="18">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="Tapped1" />
                            </Frame.GestureRecognizers>
                            <Label
                                Margin="-15"
                                FontSize="Medium"
                                HorizontalTextAlignment="Center"
                                Text="{Binding DurchschnittHJ1, TargetNullValue='-'}"
                                TextColor="Black"
                                VerticalTextAlignment="Center" />
                        </Frame>
                        <Frame
                            Margin="10,0,0,0"
                            CornerRadius="15"
                            HeightRequest="18"
                            WidthRequest="18">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="Tapped2" />
                            </Frame.GestureRecognizers>
                            <Label
                                Margin="-15"
                                FontSize="Medium"
                                HorizontalTextAlignment="Center"
                                Text="{Binding DurchschnittHJ2, TargetNullValue='-'}"
                                TextColor="Black"
                                VerticalTextAlignment="Center" />
                        </Frame>
                        <Frame
                            Margin="10,0,0,0"
                            CornerRadius="15"
                            HeightRequest="18"
                            WidthRequest="18">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="Tapped3" />
                            </Frame.GestureRecognizers>
                            <Label
                                Margin="-15"
                                FontSize="Medium"
                                HorizontalTextAlignment="Center"
                                Text="{Binding DurchschnittHJ3, TargetNullValue='-'}"
                                TextColor="Black"
                                VerticalTextAlignment="Center" />
                        </Frame>
                        <Frame
                            Margin="10,0,0,0"
                            CornerRadius="15"
                            HeightRequest="18"
                            WidthRequest="18">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="Tapped4" />
                            </Frame.GestureRecognizers>
                            <Label
                                Margin="-15"
                                FontSize="Medium"
                                HorizontalTextAlignment="Center"
                                Text="{Binding DurchschnittHJ4, TargetNullValue='-'}"
                                TextColor="Black"
                                VerticalTextAlignment="Center" />
                        </Frame>
                    </StackLayout>
                </StackLayout>
            </Frame>
            <!--  aktueller Schnitt Block 2  -->
            <Frame
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Margin="20,0,0,10"
                Padding="0"
                CornerRadius="20">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="OpenBlock2" />
                </Frame.GestureRecognizers>
                <StackLayout HorizontalOptions="CenterAndExpand">
                    <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                        <Label
                            Margin="0,7,0,-5"
                            FontSize="Large"
                            HorizontalTextAlignment="Center"
                            Text="Block 2"
                            TextColor="Black" />
                        <Frame
                            Margin="0,8,0,0"
                            BackgroundColor="Red"
                            CornerRadius="20">
                            <Label
                                Margin="-15"
                                FontSize="Small"
                                HorizontalTextAlignment="Center"
                                Text="{Binding PunktzahlBlock2}"
                                TextColor="Black"
                                VerticalTextAlignment="Start" />
                        </Frame>
                    </StackLayout>
                    <Label
                        Margin="0,-5,0,0"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        Text="{Binding DurchschnittBlock2, TargetNullValue='-'}"
                        TextColor="Black" />
                </StackLayout>
            </Frame>
            <!--  aktueller Abiturschnitt  -->
            <Frame
                Grid.Row="3"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Margin="5,0,20,10"
                Padding="0"
                CornerRadius="20">
                <StackLayout HorizontalOptions="CenterAndExpand">
                    <Label
                        Margin="0,7,0,0"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        Text="Abischnitt"
                        TextColor="Black" />
                    <Label
                        Margin="0,-5,0,0"
                        FontSize="Large"
                        HorizontalOptions="Center"
                        Text="{Binding AbiturNote, FallbackValue='-'}"
                        TextColor="Black" />
                </StackLayout>
            </Frame>





        </Grid>
    </ContentPage.Content>
</ContentPage>

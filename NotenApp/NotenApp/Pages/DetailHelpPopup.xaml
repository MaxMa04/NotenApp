<?xml version="1.0" encoding="utf-8" ?>
<xctViews:Popup
    x:Class="NotenApp.Pages.DetailHelpPopup"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:xctViews="clr-namespace:Xamarin.CommunityToolkit.UI.Views;assembly=Xamarin.CommunityToolkit"
    HorizontalOptions="Center"
    IsLightDismissEnabled="False"
    Size="370,420"
    VerticalOptions="Center">
    <ScrollView BackgroundColor="{DynamicResource Primary}">
        <StackLayout
            Padding="10"
            Spacing="10"
            VerticalOptions="Center">
            <Label
                FontAttributes="Bold"
                FontSize="30"
                HorizontalOptions="Center"
                Text="Erklärung"
                TextColor="{DynamicResource Secondary}"
                TextDecorations="Underline"
                VerticalOptions="Center" />
            <Label
                FontSize="16"
                HorizontalOptions="Center"
                Text="Auf der Detailseite eines Faches kannst du viele Einstellungen vornehmen."
                TextColor="{DynamicResource Fith}"
                VerticalOptions="Center" />
            <StackLayout Orientation="Horizontal" Spacing="5">
                <Label
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="&#9673;"
                    TextColor="{DynamicResource Fith}"
                    VerticalOptions="Start"
                    WidthRequest="20" />
                <Label
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="Du kannst das Fach zu deinem Leistungskurs machen."
                    TextColor="{DynamicResource Fith}"
                    VerticalOptions="Start" />
            </StackLayout>
            <StackLayout Orientation="Horizontal" Spacing="5">
                <Label
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="&#9673;"
                    TextColor="{DynamicResource Fith}"
                    VerticalOptions="Start"
                    WidthRequest="20" />
                <Label
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="Du kannst dir ein Ziel für dieses Halbjahr setzen."
                    TextColor="{DynamicResource Fith}"
                    VerticalOptions="Start" />
            </StackLayout>
            <StackLayout Orientation="Horizontal" Spacing="5">
                <Label
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="&#9673;"
                    TextColor="{DynamicResource Fith}"
                    VerticalOptions="Start"
                    WidthRequest="20" />
                <Label
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="Du kannst Noten über das ✚ hinzufügen oder eine Note löschen, indem du sie anklickst."
                    TextColor="{DynamicResource Fith}"
                    VerticalOptions="Start" />
            </StackLayout>
            <StackLayout Orientation="Horizontal" Spacing="5">
                <Label
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="&#9673;"
                    TextColor="{DynamicResource Fith}"
                    VerticalOptions="Start"
                    WidthRequest="20" />
                <Label
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="Wenn du alle Noten in diesem Halbjahr erhalten hast, kannst du deine Endnote festlegen."
                    TextColor="{DynamicResource Fith}"
                    VerticalOptions="Start" />
            </StackLayout>



            <StackLayout
                HorizontalOptions="Center"
                Orientation="Horizontal"
                Spacing="3"
                VerticalOptions="Center">
                <CheckBox
                    x:Name="check"
                    VerticalOptions="Center"
                    Color="{DynamicResource Secondary}" />
                <Label
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="Verstanden - Nicht mehr anzeigen!"
                    TextColor="{DynamicResource Fith}"
                    VerticalOptions="Center" />

            </StackLayout>
            <Button
                BackgroundColor="{DynamicResource Secondary}"
                Clicked="Button_Clicked"
                CornerRadius="15"
                FontSize="20"
                HeightRequest="50"
                HorizontalOptions="End"
                Text="OK"
                TextColor="{DynamicResource Fith}"
                WidthRequest="55" />
        </StackLayout>
    </ScrollView>


</xctViews:Popup>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NotenApp.Pages.DetailSeite"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ViewModels="clr-namespace:NotenApp.ViewModels"
    x:Name="detailseite">
    <ContentPage.BindingContext>
        <ViewModels:DetailViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid BackgroundColor="#303030">

            <!--  Griddefinition  -->

            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
                <RowDefinition Height="80" />
                <!--  Beginn Notenverwaltung  -->
                <RowDefinition Height="50" />
                <RowDefinition Height="45" />
                <RowDefinition Height="50" />
                <RowDefinition x:Name="rdcv" Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--  Aktueller Schnitt  -->
            <StackLayout Grid.Row="0" Grid.ColumnSpan="3">
                <Frame
                    Margin="0,20,0,0"
                    Padding="0"
                    BackgroundColor="#7BA4A8"
                    CornerRadius="80"
                    HeightRequest="120"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    WidthRequest="120">
                    <Label
                        FontSize="50"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="{Binding FachDurchschnitt, TargetNullValue='-'}"
                        TextColor="White"
                        VerticalOptions="Center"
                        VerticalTextAlignment="Center" />
                </Frame>
                <Label
                    FontSize="30"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="{Binding FachEinzubringendeHalbjahre}"
                    TextColor="White"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center" />
                <Label
                    FontSize="30"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="{Binding FachName}"
                    TextColor="White"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center" />
                <Label
                    x:Name="hallo"
                    FontSize="30"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text=""
                    TextColor="White"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center" />
                <Label
                    x:Name="hallo2"
                    FontSize="30"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text=""
                    TextColor="White"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center" />
            </StackLayout>
            <!--  Facheinstellungen  -->
            <Button
                Grid.Row="1"
                Grid.Column="0"
                Text="Runden" />
            <Button
                Grid.Row="1"
                Grid.Column="1"
                Text="Ziel" />
            <Button
                Grid.Row="1"
                Grid.Column="2"
                Text="Rausstreichen" />

            <!--  Klausur Noten Übersicht  -->
            <Frame
                Grid.Row="2"
                Grid.ColumnSpan="3"
                Margin="10,0,10,-6"
                BackgroundColor="Red">
                <StackLayout Orientation="Horizontal">
                    <Label
                        Margin="0,-10"
                        FontSize="Medium"
                        Text="Klausur-Noten"
                        VerticalOptions="Center" />
                    <ImageButton
                        Margin="0,-10"
                        Clicked="AddKlausurNote"
                        Source="Plus1.png"
                        VerticalOptions="Center" />
                </StackLayout>
            </Frame>
            <CollectionView
                Grid.Row="3"
                Grid.ColumnSpan="3"
                Margin="10,0,10,-15"
                Background="LightGreen"
                BackgroundColor="White"
                ItemsSource="{Binding KlausurNoten}"
                SelectionChanged="DeleteNote"
                SelectionMode="Single">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout
                        HorizontalItemSpacing="3"
                        Orientation="Vertical"
                        Span="6"
                        VerticalItemSpacing="5" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="5"
                            CornerRadius="20"
                            HeightRequest="9">
                            <Label
                                Margin="-10"
                                FontSize="Medium"
                                HorizontalOptions="Center"
                                Text="{Binding Note}"
                                TextColor="Black"
                                VerticalOptions="Center" />
                        </Frame>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!--  LK Noten Übersicht  -->
            <Frame
                Grid.Row="4"
                Grid.ColumnSpan="3"
                Margin="10,10,10,-16"
                BackgroundColor="Red">
                <StackLayout Orientation="Horizontal">
                    <Label
                        Margin="0,-10"
                        FontSize="Medium"
                        Text="LK-Noten"
                        VerticalOptions="Center" />
                    <ImageButton
                        Margin="0,-10"
                        Clicked="AddLKNote"
                        Source="Plus1.png"
                        VerticalOptions="Center" />
                </StackLayout>
            </Frame>
            <CollectionView
                x:Name="cv"
                Grid.Row="5"
                Grid.ColumnSpan="3"
                Margin="10"
                BackgroundColor="Aqua"
                ItemsSource="{Binding LKNoten}"
                SelectionChanged="DeleteNote"
                SelectionMode="Single">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout
                        HorizontalItemSpacing="3"
                        Orientation="Vertical"
                        Span="6"
                        VerticalItemSpacing="5" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="5"
                            CornerRadius="20"
                            HeightRequest="9">
                            <Label
                                Margin="-10"
                                FontSize="Medium"
                                HorizontalOptions="Center"
                                Text="{Binding Note}"
                                TextColor="Black"
                                VerticalOptions="Center" />
                        </Frame>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:NotenApp.ViewModels"
             x:Class="NotenApp.Pages.DetailSeite"
             x:Name="detailseite">
    <ContentPage.BindingContext>
        <ViewModels:DetailViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid BackgroundColor="#303030">

            <!--Griddefinition-->

            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
                <RowDefinition Height="80" />
                <RowDefinition Height="50"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="50"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
             <!--Aktueller Schnitt-->
            <StackLayout Grid.Row="0" Grid.ColumnSpan="3">
                <Frame HeightRequest="120" WidthRequest="120" CornerRadius="80" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,20,0,0" Padding="0" BackgroundColor="#7BA4A8" >
                    <Label Text="{Binding FachDurchschnitt}" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="50" />
                </Frame>
                <Label x:Name="Label"  Text="" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="30" />
            </StackLayout>
            <!--Facheinstellungen-->
            <Button Grid.Row="1" Grid.Column="0" Text="Runden"/>
            <Button Grid.Row="1" Grid.Column="1" Text="Ziel"/>
            <Button Grid.Row="1" Grid.Column="2" Text="Rausstreichen"/>

            <!--LK Noten Übersicht-->
            <Frame BackgroundColor="Red" Grid.Row="2" Grid.ColumnSpan="3" Margin="10,10,10,-16">
                <Label Text="LK-Noten"/>
            </Frame>
            <CollectionView Margin="10" BackgroundColor="Aqua" Grid.Row="3" Grid.ColumnSpan="3" ItemsSource="{Binding LKNoten}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout
                        Orientation="Horizontal"
                        ItemSpacing="20"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding Note}" FontSize="Medium"></Label>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <!--Klausur Noten Übersicht-->
            <Frame BackgroundColor="Red" Grid.Row="4" Grid.ColumnSpan="3" Margin="10,0,10,-6">
                <Label Text="Klausur-Noten"/>
            </Frame>
            <CollectionView Background="LightGreen" Margin="10,0,10,10" BackgroundColor="White" Grid.Row="5" Grid.ColumnSpan="3" ItemsSource="{Binding KlausurNoten}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout
                        Orientation="Horizontal"
                        ItemSpacing="5"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding Note}" FontSize="Medium"></Label>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</ContentPage>